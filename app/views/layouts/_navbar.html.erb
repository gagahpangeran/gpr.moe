<div class="navbar">
  <ul>
    <li>
      <%= link_to "Home", root_path %>
    </li>

    <% if authenticated? %>
    <li>
      <%= link_to "Links", links_path %>
    </li>

    <li class="separator">
    </li>

    <% if Current.user.admin? %>
    <li>
      <%= link_to "Admin", admin_root_path %>
    </li>
    <% end %>

    <li>
      <%= link_to "Logout", logout_path, data: { turbo_method: :delete } %>
    </li>

    <% else %>
    <li>
      <%= link_to "Login", login_path %>
    </li>
    <% end %>
  </ul>
</div>