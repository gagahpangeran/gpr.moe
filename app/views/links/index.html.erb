<% content_for :title, "All Links" %>

<h1>All Links</h1>

<div>
  <%= link_to "Add new link", new_link_path %>
</div>

<div class="table-wrapper">
  <table>
    <tbody>
      <% @links.each do |link| %>
      <tr>
        <td>
          <a href="<%= slug_url(link.slug) %>" data-turbo-prefetch="false">
            <%= link.slug %>
          </a>
          <%= render "copy-button", text: slug_url(link.slug) %>
        </td>
        <td>
          <%= link.visit_count %>
        </td>
        <td>
          <a href="<%= link.url %>">
            <%= link.url %>
          </a>
          <%= render "copy-button", text: link.url %>
        </td>
        <td>
          <%= link_to "Edit", edit_link_path(link.id) %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>