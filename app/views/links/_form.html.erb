<%= form_with model: link do |form| %>
  <%= form.text_field :url, required: true, placeholder: "Your long URL" %>
  <%= form.text_field :slug, required: true, placeholder: "Your custom slug" %>
  <% if link.visit_count > 0 %>
  <div>
    <strong>Visit count:</strong> <%= link.visit_count %>
  </div>
  <% end %>
  <%= form.submit %>
<% end %>
